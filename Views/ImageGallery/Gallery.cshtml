
@model List<Flower.Models.product>

@{
    ViewBag.Title = "Gallery";
}

<h2>Gallery</h2>

<table>
    @{
        int j = 0;
        

        for(int i=0 ; i<Model.Count(); i+=4)
        {
            j = 1;
            <tr>

                @while(j< i+4  && j<Model.Count())
                {
                    <td>

                        <img src="data:image/png;base64,@Convert.ToBase64String(Model[j].ImageData,0,Model[j].ImageData.Length)" width="150" />


                    </td>
                    j++;
              }
            </tr>
        
         }
     }





</table>
